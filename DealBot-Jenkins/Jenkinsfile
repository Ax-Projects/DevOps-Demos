pipeline {
  agent {
    node {
      label 'local'
    }
  }
  triggers {
    pollSCM 'H/30 * * * *'
  }
  options{
    buildDiscarder(logRotator(numToKeepStr: '5', daysToKeepStr: '5'))
    timestamps()
  }
  environment {
    SECRET_FILE = credentials('terraform-secrets')
    TF_IN_AUTOMATION = 'true'
  }
  stages {
    stage('clone repo') {
      steps {
        git branch: 'main', url: 'https://github.com/Ax-Projects/DevOps-Demos'
        // git branch: 'main', url: 'https://github.com/Ax-Projects/DealBot'
      }
    }
    stage('init terraform') {
      steps {
        sh(script: "cd DealBot-Jenkins && terraform init", returnStdout: true, returnStatus: true)
      }
    }
    stage('copy secrets') {
      steps{
        sh 'echo $PWD'
        sh 'cp $SECRET_FILE ./DealBot-Jenkins/secret.tfvars'
      }
      // steps {
      //   script {
      //       echo "$PWD";
      //       fileOperations([[$class 'CopyOperation', from: '~/secrets/secret.tfvars', into: './secret.tfvars']])
      //   }
      // }
    }
    stage('terraform plan') {
      steps {
        sh(script: "cd DealBot-Jenkins && terraform plan -var-file=secret.tfvars", returnStdout: true, returnStatus: true)
      }
    }
  }
}